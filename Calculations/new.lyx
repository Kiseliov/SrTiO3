\begin{gather}
\text{Приведём константы в соответствие }\nonumber \\
D=E+4\pi P=\epsilon_{0}E,\ \epsilon_{0}\gg1,\Rightarrow E\approx\frac{4\pi}{\epsilon_{0}}P\Rightarrow\alpha=\frac{4\pi}{\epsilon_{0}}\nonumber \\
\xi_{T}=\xi_{T}^{1}\frac{1}{\beta}=\xi\sqrt{\frac{\epsilon_{0}}{\epsilon_{1}}}\nonumber \\
\begin{cases}
\xi_{T}=\xi\sqrt{\frac{\epsilon_{0}}{\epsilon_{1}}}\\
\alpha=\frac{4\pi}{\epsilon_{0}}\ll1\\
\epsilon_{1}\sim1\\
\frac{h}{\xi}\gg1
\end{cases}\nonumber \\
\text{Переходя собственно к решению:}\nonumber \\
\begin{cases}
\frac{d(E+4\pi P)}{dx}=0\\
\frac{1}{\alpha}E=P-\xi_{T}^{2}\frac{\partial^{2}P}{\partial x^{2}}\\
D=4\pi\sigma\\
P(-h)=P(h)=0
\end{cases}\\
E=D-4\pi P\\
\frac{\partial^{2}P}{\partial x^{2}}-\frac{(4\pi/\alpha+1)}{\xi_{T}^{2}}P=-\frac{1}{\alpha\xi_{T}^{2}}D\\
P(x)=A_{1}e^{\frac{\sqrt{4\pi/\alpha+1}}{\xi_{T}}x}+A_{2}e^{-\frac{\sqrt{4\pi/\alpha+1}}{\xi_{T}}x}+\frac{1}{4\pi+\alpha}D\\
\begin{cases}
P(-h)=0=A_{1}e^{-\frac{\sqrt{4\pi/\alpha+1}}{\xi_{T}}h}+A_{2}e^{\frac{\sqrt{4\pi/\alpha+1}}{\xi_{T}}h}+\frac{1}{4\pi+\alpha}D\\
P(h)=0=A_{1}e^{\frac{\sqrt{4\pi/\alpha+1}}{\xi_{T}}h}+A_{2}e^{-\frac{\sqrt{4\pi/\alpha+1}}{\xi_{T}}h}+\frac{1}{4\pi+\alpha}D
\end{cases}\\
A_{1}=A_{2}=-\frac{D}{(4\pi+\alpha)\ch\left(\frac{\sqrt{4\pi/\alpha+1}}{\xi_{T}}h\right)}\nonumber \\
P(x)=\frac{D}{4\pi+\alpha}\left[1-\frac{\ch\left(\frac{\sqrt{4\pi/\alpha+1}}{\xi_{T}}x\right)}{\ch\left(\frac{\sqrt{4\pi/\alpha+1}}{\xi_{T}}h\right)}\right]=\frac{4\pi\sigma}{4\pi+\alpha}\left[1-e^{\frac{x-h}{\sqrt{\epsilon_{1}}\xi}}\right]
\end{gather}

