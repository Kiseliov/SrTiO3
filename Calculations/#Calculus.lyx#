\begin_body

\begin_layout Standard
\begin_inset FormulaMacro
\newcommand{\sign}{\operatorname{sgn}}
{\mathrm{sign}}
\end_inset


\end_layout

\begin_layout Standard
\begin_inset FormulaMacro
\newcommand{\ch}{\operatorname{ch}}
{\mathrm{ch}}
\end_inset


\end_layout

\begin_layout Standard
\begin_inset FormulaMacro
\newcommand{\sh}{\operatorname{sh}}
{\mathrm{sh}}
\end_inset


\end_layout

\begin_layout Section
K(x)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\beta & =\sqrt{\frac{\epsilon_{1}}{\epsilon_{0}}}\\
\epsilon(q) & =\epsilon_{1}\epsilon_{0}\frac{1+(q\xi)^{2}}{\epsilon_{1}+\epsilon_{0}(q\xi)^{2}}\\
K(x) & =\frac{1}{2\pi}\epsilon_{0}\epsilon_{1}\int\limits _{-\infty}^{+\infty}\frac{1+(q\xi)^{2}}{\epsilon_{1}+\epsilon_{0}(q\xi)}e^{iqx}dq=\\
 & =\frac{\epsilon_{1}}{2\pi}\int e^{iqx}(1+\frac{\epsilon_{0}-\epsilon_{1}}{\epsilon_{1}+\epsilon_{0}(q\xi)^{2}})dq=\\
 & =\epsilon_{1}\delta(x)+(\epsilon_{0}-\epsilon_{1})\frac{\beta}{2\xi}\sign(x)e^{-\beta\frac{|x|}{\epsilon}}
\end{align*}

\end_inset


\end_layout

\begin_layout Section
D(x)
\end_layout

\begin_layout Standard
Let's pretend that 
\begin_inset Formula $E(x)=E_{0}+E_{1}e^{\frac{x-h}{\xi}}+E_{1}e^{\frac{-x-h}{\xi}}=E_{0}+2E_{1}e^{-\frac{h}{\xi}}\ch(\frac{x}{\xi})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $D(x)=\int\limits _{-h}^{h}K(x-x')E(x')dx'=\int\limits _{-h}^{h}\left(\epsilon_{1}\delta(x-x')+\frac{\beta}{2\xi}\sign(x-x')(\epsilon_{0}-\epsilon_{1})e^{-\beta\frac{|x-x'|}{\epsilon}}\right)\left(E_{0}+2E_{1}e^{-\frac{h}{\xi}}\ch(\frac{x}{\xi})\right)$
\end_inset


\end_layout

\begin_layout Subsection
\begin_inset Formula $D_{1}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $D_{1}(x)=\int\epsilon_{1}\delta(x-x')\left(E_{0}+E_{1}e^{-\frac{h}{\xi}}\ch(\frac{x}{\xi})\right)=\epsilon_{1}E_{0}+\epsilon_{1}E_{1}e^{-\frac{h}{\xi}}\ch(\frac{x}{\xi})$
\end_inset


\end_layout

\begin_layout Subsection
\begin_inset Formula $D_{2}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
D_{2}(x) & =\frac{\beta}{2\xi}(\epsilon_{0}-\epsilon_{1})E_{0}\int\sign(x-x')e^{-\beta\frac{|x-x'|}{\epsilon}}dx'=\\
 & =\frac{\beta}{2\xi}(\epsilon_{0}-\epsilon_{1})E_{0}\left[\int\limits _{-h}^{x}\exp(-\beta\frac{x-x'}{\xi})dx'-\int\limits _{x}^{h}\exp(\beta\frac{x-x'}{\xi})\right]=\\
 & =\frac{\beta}{2\xi}(\epsilon_{0}-\epsilon_{1})E_{0}\left[e^{-\beta\frac{x}{\xi}}\frac{\xi}{\beta}\left(e^{\beta\frac{x}{\xi}}-e^{-\beta\frac{h}{\xi}}\right)+e^{\beta\frac{x}{\xi}}\frac{\xi}{\beta}\left(e^{-\beta\frac{h}{\xi}}-e^{-\beta\frac{x}{\xi}}\right)\right]=\\
 & =(\epsilon_{0}-\epsilon_{1})E_{0}e^{-\beta\frac{x}{\xi}}\ch\left(\beta\frac{x}{\xi}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection
\begin_inset Formula $D_{3}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
D_{3}(x) & =\frac{\beta}{\xi}(\epsilon_{0}-\epsilon_{1})E_{1}e^{-\frac{h}{\xi}}\int\limits _{-h}^{+h}\sign(x-x')e^{-\beta\frac{|x-x'|}{\xi}}\ch\left(\frac{x'}{\xi}\right)dx'=\\
 & =\frac{\beta}{2\xi}(\epsilon_{0}-\epsilon_{1})E_{1}e^{-\frac{h}{\xi}}\left[e^{-\beta\frac{x}{\xi}}\int\limits _{-h}^{x}\left(e^{\frac{x'}{\xi}(1+\beta)}+e^{\frac{x'}{\xi}(\beta-1)}\right)dx'-e^{\beta\frac{x}{\xi}}\int\limits _{x}^{h}\left(e^{\frac{x'}{\xi}(1-\beta)}+e^{-\frac{x'}{\xi}(1+\beta)}\right)dx'\right]=\\
 & =\frac{\beta}{2\xi}(\epsilon_{0}-\epsilon_{1})E_{1}e^{-\frac{h}{\xi}}\text{\Bigg[}e^{-\beta\frac{x}{\xi}}\left(\frac{\xi}{1+\beta}\left\{ e^{\frac{x}{\xi}(1+\beta)}-e^{-\frac{h}{\xi}(1+\beta)}\right\} +\frac{\xi}{\beta-1}\left\{ e^{\frac{x}{\xi}(\beta-1)}-e^{-\frac{h}{\xi}(\beta-1)}\right\} \right)-\\
 & -e^{\beta\frac{x}{\xi}}\left(\frac{\xi}{1-\beta}\left\{ e^{\frac{h}{\xi}(1-\beta)}-e^{\frac{x}{\xi}(1-\beta)}\right\} -\frac{\xi}{\beta+1}\left\{ e^{-\frac{h}{\xi}(1+\beta)}-e^{-\frac{x}{\xi}(\beta+1)}\right\} \right)\Bigg]=\\
 & =\frac{1}{2}\beta(\epsilon_{0}-\epsilon_{1})E_{1}e^{-\frac{h}{\xi}}\Bigg[\frac{1}{1+\beta}\left(e^{\frac{x}{\xi}}-e^{-\frac{h}{\xi}(1+\beta)-\beta\frac{x}{\xi}}+e^{-\frac{h}{\xi}(1+\beta)+\beta\frac{x}{\xi}}-e^{-\frac{x}{\xi}}\right)+\frac{1}{\beta-1}\left(e^{-\frac{x}{\xi}}-e^{-\frac{h}{\xi}(\beta-1)-\beta\frac{x}{\xi}}+e^{-\frac{h}{\xi}(\beta-1)+\beta\frac{x}{\xi}}-e^{\frac{x}{\xi}}\right)\Bigg]=\\
 & =\frac{1}{2}\beta(\epsilon_{0}-\epsilon_{1})E_{1}e^{-\frac{h}{\xi}}\Bigg[\frac{2}{1+\beta}\left(\sh(\frac{x}{\xi})-\sh(\beta\frac{x}{\xi})e^{-\frac{h}{\xi}(1+\beta)}\right)+\frac{2}{1-\beta}\left(\sh(\frac{x}{\xi})-\sh(\beta\frac{x}{\xi})e^{-\frac{h}{\xi}(\beta-1)}\right)\Bigg]=\\
 & =\beta(\epsilon_{0}-\epsilon_{1})E_{1}e^{-\frac{h}{\xi}}\Bigg[\frac{2}{1-\beta^{2}}\sh(\frac{x}{\xi})-\sh(\beta\frac{x}{\xi})e^{-\beta\frac{h}{\xi}}\left(\frac{e^{-\frac{h}{\xi}}}{1+\beta}+\frac{e^{\frac{h}{\xi}}}{1-\beta}\right)\Bigg]=\\
 & =\beta(\epsilon_{0}-\epsilon_{1})E_{1}e^{-\frac{h}{\xi}}\Bigg[\frac{2}{1-\beta^{2}}\sh(\frac{x}{\xi})-2\sh(\beta\frac{x}{\xi})e^{-\beta\frac{h}{\xi}}\left(\frac{2\ch(\frac{h}{\xi})+2\beta\sh(\frac{h}{\xi})}{1-\beta^{2}}\right)\Bigg]=\\
 & =\frac{2\beta}{1-\beta^{2}}(\epsilon_{0}-\epsilon_{1})E_{1}e^{-\frac{h}{\xi}}\Bigg[\sh(\frac{x}{\xi})-2\sh(\beta\frac{x}{\xi})e^{-\beta\frac{h}{\xi}}\left(\ch(\frac{h}{\xi})+\beta\sh(\frac{h}{\xi})\right)\Bigg]
\end{align*}

\end_inset


\end_layout

